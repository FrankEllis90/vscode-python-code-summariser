{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Extension",
        "type": "extensionHost",
        "request": "launch",
        "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "preLaunchTask": "${defaultBuildTask}",
        "env": {
          "OPENAI_API_KEY": "your-api-key-here"
        }
      }
    ]
  }